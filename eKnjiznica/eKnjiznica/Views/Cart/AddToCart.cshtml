@model  eKnjiznica.Data.Entities.Product
@{ 
    ViewBag.Title = "Add to Cart";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
    <br />
    <br />
    <br />

@using (@Html.BeginForm())
{
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8">
                <h1>Product Name:@Model.Name</h1>
                <h1>Product Price:@Model.Price</h1>
                <h1>Product Description:@Model.Description</h1>

                <input type="number" name="qty" value="1" id="qty" min="1" max="10"/>
                <input type="submit" value="CheckOut" class="btn btn-default"/>
            </div>
        </div>
    </div>
}
